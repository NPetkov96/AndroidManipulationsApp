<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedSestriManipulations.MainPage">

    <VerticalStackLayout Padding="20">

        <HorizontalStackLayout>
            <Button Text="Изпрати чрез Viber" Clicked="OnSendClicked" />
            <Button Text="Изчисти" Clicked="OnClearClicked" Margin="10,0,0,0"/>
        </HorizontalStackLayout>

        <Label Text="Данни за пациент" FontSize="20" Margin="0,10,0,0"/>
        <Entry x:Name="FirstNameEntry" Placeholder="Име" />
        <Entry x:Name="LastNameEntry" Placeholder="Фамилия" />
        <Entry x:Name="EGNEntry" Placeholder="ЕГН" Keyboard="Numeric" />

        <Label Text="Избери медицински манипулации" FontSize="20" Margin="0,10,0,0" />

        <SearchBar x:Name="SearchBar" Placeholder="Търси манипулация..." TextChanged="OnSearchTextChanged" />

        <CollectionView x:Name="ProcedureList"
                        VerticalOptions="FillAndExpand"
                        HeightRequest="400">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Padding="5">
                        <CheckBox IsChecked="{Binding IsSelected}" />
                        <Label Text="{Binding Name}" Margin="10,0,0,0"/>
                        <Label Text="{Binding Price, StringFormat=' {0} лв'}" Margin="10,0,0,0"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label x:Name="TotalLabel" Text="Общо: 0 лв" FontSize="20" Margin="0,10,0,0"/>
    </VerticalStackLayout>
</ContentPage>
